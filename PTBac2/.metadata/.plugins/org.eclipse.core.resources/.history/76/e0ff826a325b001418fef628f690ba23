package testxxx;

import static java.lang.Math.sqrt;


public class MainTest {
	public String GiaiPT(double a, double b, float c){
		double delta = (b*b - 4*a*c);		
		
		if( a == 0)
			return "Error value of a";
		if (a + b + c == 0)
			return "Equation have value of x1 = 1 and value of x2 = " + String.valueOf(c/a);
		if (a - b + c == 0)
			return "Equation have value of x1 = -1 and value of x2 = " + String.valueOf(-c/a);
		else if(delta < 0)
			return "Equation have no values of x1 and x2";
		else if(delta == 0)
			return " Equation have x1 = x2 = " + String.valueOf(-b/(2*a));
		else
			return "Equation have x1 = " + String.valueOf((-b - sqrt(delta))/(2*a)) +
					    "and have x2 = " + String.valueOf((-b + sqrt(delta))/(2*a));
	}
	public static void main(){
		MainTest mainTest1 = new MainTest();
		MainTest mainTest2 = new MainTest();
		MainTest mainTest3 = new MainTest();
		MainTest mainTest4 = new MainTest();
		MainTest mainTest5 = new MainTest();
		MainTest mainTest6 = new MainTest();
		
		System.out.print(mainTest1.GiaiPT(0, 2, 3));
		System.out.print(mainTest2.GiaiPT(3, -2, 1));
		System.out.print(mainTest3.GiaiPT(2, 3, 1));
		System.out.print(mainTest4.GiaiPT(3, 2, 1));
		System.out.print(mainTest5.GiaiPT(4, 4, 2));
		System.out.print(mainTest6.GiaiPT(2, 4, 1));
	
	}

}
